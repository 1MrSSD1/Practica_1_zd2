<Window x:Class="WpfApp73.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp73"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="&#xD;&#xA;&#xD;&#xA;Введите A:"/>
        <TextBox x:Name="txtA" Grid.Row="0" Margin="100,30,50,0" Height="40" VerticalAlignment="Top"/>
        <Label Content="&#xD;&#xA;&#xD;&#xA;Введите B:" Grid.Row="1"/>
        <TextBox x:Name="txtB" Grid.Row="1" Margin="100,30,50,0" Height="40" VerticalAlignment="Top"/>
        <Label Content="&#xD;&#xA;&#xD;&#xA;Введите C:" Grid.Row="2"/>
        <TextBox x:Name="txtC" Grid.Row="2" Margin="100,30,50,40" />
        <Button x:Name="btnSwap" Content="OK" Grid.Row="3" Margin="100,34,570,30" Click="btnSwap_Click"/>
        <Label x:Name="txtOtv" Content="" Grid.Row="3" Margin="275,35,260,30" HorizontalAlignment="Center" Width="259"/>
    </Grid>
</Window>
